{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": [
      "@swc/jest",
      {
        "sourceMaps": true,
        "jsc": {
          "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true
          },
          "parser": {
            "syntax": "typescript",
            "decorators": true
          }
        }
      }
    ]
  }
}
