{
  "name": "sophies-demo-2022",
  "version": "0.0.1",
  "description": "Demo project for sophomores AY 2022 (SE-2223 + SE-2226).",
  "main": "index.js",
  "scripts": {
    "start:dev": "pnpm --parallel start:dev",
    "typecheck": "pnpm --parallel --aggregate-output typecheck",
    "build": "pnpm --parallel --aggregate-output build",
    "qa": "pnpm build && pnpm test && pnpm lint && pnpm badges:ci",
    "lint": "pnpm --parallel --aggregate-output lint",
    "badges": "istanbul-badges-readme --coverageDir=./backend/coverage --statementsLabel='Backend Code Coverage' --style='for-the-badge' --logo=jest",
    "badges:ci": "pnpm badges --ci --exitCode=1",
    "test:cov": "pnpm --color=always --parallel --aggregate-output test:cov && pnpm badges",
    "test": "pnpm --color=always --parallel --aggregate-output test:cov && pnpm --filter backend test:integration",
    "typeorm": "pnpm --filter backend typeorm"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/node": "^12.20.21",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "commitizen": "^4.2.4",
    "commitizen-emoji": "^1.0.5",
    "eslint": "^8.15.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-boundaries": "^2.9.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.2.2",
    "eslint-plugin-jsonc": "^2.2.1",
    "eslint-plugin-no-secrets": "^0.8.9",
    "eslint-plugin-unicorn": "^42.0.0",
    "eslint-plugin-vue": "^8.7.1",
    "husky": "^7.0.4",
    "istanbul-badges-readme": "^1.8.1",
    "lint-staged": "^12.4.1",
    "postcss": "^8.4.13",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.5.4"
  }
}
